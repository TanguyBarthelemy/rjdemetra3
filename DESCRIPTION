Package: rjdemetra3
Type: Package
Title: Interface to 'JDemetra+ 3.0' Seasonal Adjustment Software
Version: 3.0.0
Authors@R: c(
  person("Alain", "Quartier-la-Tente", role = c("aut", "cre"),
                 email = "alain.quartier@yahoo.fr",
                 comment = c(ORCID = "0000-0001-7890-3857")),
